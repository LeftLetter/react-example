{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:storybook/recommended",
    "prettier"
  ],
  "rules": { "react/prop-types": "off", "react/react-in-jsx-scope": "off" },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
